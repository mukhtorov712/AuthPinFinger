<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="Parolingizni kiriting"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

    <com.poovam.pinedittextfield.CirclePinField
        android:focusableInTouchMode="true"
        android:id="@+id/pin_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:inputType="number"
        app:circleRadius="@dimen/_12sdp"
        app:fieldColor="@color/red"
        app:fillerColor="@color/grey">
        <requestFocus />
    </com.poovam.pinedittextfield.CirclePinField>

    <TextView
        android:id="@+id/finger_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"
        android:text="Barmoq izidan foydalanish"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp" />

</LinearLayout>